{
    "name": "rallen/phpmd",
    "description": "Official version of PHPMD handled with Composer.",
    "license": "BSD-3-Clause",

    "require": {
        "php": ">=5.3.0",
        "pdepend/pdepend": ">=1.1.1"
    },

    "include-path": [
        "../../pdepend/pdepend/src/main/php",
        "src/main/php"
    ],
    "bin": ["src/bin/phpmd"],
    "autoload": {
        "psr-0": {
            "PHP_PMD": "src/main/php"
        }
    }
}

